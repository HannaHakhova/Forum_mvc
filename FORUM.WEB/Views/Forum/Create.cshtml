@using FORUM.WEB.Models
@model ForumModel

@{
    ViewBag.Title = "Create subforum";
}

<div class="container">
    <h3>Create subforum</h3>
<div class="row">
    <div class="col-md-6">
        @using (Html.BeginForm("Create", "Forum", FormMethod.Post))
        {
            <div class="panel panel-default">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="panel-heading">Subforum name</div>
                <div class="panel-body">

                    @Html.TextAreaFor(model => model.Name, new { cols = 35, @rows = 1 })
                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })

                </div>
                <div class="panel-heading">Description</div>
                <div class="panel-body">
                    @Html.TextAreaFor(model => model.Description, new { cols = 35, @rows = 3 })
                    @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                </div>
            </div>
            
            <input type="submit" value="Create subforum" class="btn btn-success">
        }
              
    </div>
</div>
</div>
